extends layout 
block scripts 
    script(src="/javascripts/borrarTarea.js", defer)
block content 
    h1 My to do list
    form(action="/todo/add", method="post", autocomplete="off") 
        input(type="text", name="nuevaTarea", placeholder="Añadir una tarea")
        input(type="submit", value="Añadir tarea")
    if listaTareas.length > 0
        ul#listaTareas
            each tarea in listaTareas 
             li 
                form(action="", method="post", id="borrarForm")
                    input(type="submit", value="X" id="borrarTarea")
                    input(type="hidden", name="id_tarea", value=`${tarea.idTarea}`)
                    span= tarea.tareaDesc

    else 
        p No hay tareas
    br
    a(href="/") Volver al inicio