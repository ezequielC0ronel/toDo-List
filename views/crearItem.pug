extends layout 

block content 
    h1 Nuevo Item
    #formulario
        form(action="/crear/item/add", method="post", autocomplete="off")
            label(for="titulo") Titulo 
            input(type="text", name="tituloItem", id="titulo", placeholder="Coloca un titulo al item")
            br
            label(for="descripcion") Descripci√≥n 
            input(type="text", name="descripcionItem", id="descripcion", placeholder="Coloca una descripcion al item")
            br
            .fechaLista 
                #hasta 
                    span Hasta 
                    br
                    input(type="date", name="fechaLimite")
            label(for="prioridad") Prioridad 
            select(name="prioridad", id="prioridad")
                option(value="baja") Baja 
                option(value="media") Media
                option(value="alta") Alta
            br
            label(for="listas") Listas 
            select(name="listasItem", id="listas")
                option(value="sin lista") Sin lista
                each lista in listasCreadas 
                    option(value=`${lista.idLista}`)
                        =`${lista.titulo}`
            br
            input(type="submit", value="Cargar item")
    a(href="/") Volver al inicio